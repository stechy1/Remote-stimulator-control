<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_extensions"
        android:entryValues="@array/pref_extensions_values"
        android:key="extension"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_file_type" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="show_extension"
        android:title="@string/pref_show_extension" />

</PreferenceScreen>